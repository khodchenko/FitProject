<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_day"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_icon_exercise8"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/iv_icon_exercise3"
            android:layout_toEndOf="@+id/iv_icon_exercise7"
            app:srcCompat="@drawable/dot_icon" />

        <ImageView
            android:id="@+id/iv_icon_exercise9"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/iv_icon_exercise4"
            android:layout_toEndOf="@+id/iv_icon_exercise8"
            app:srcCompat="@drawable/dot_icon" />

        <ImageView
            android:id="@+id/iv_icon_exercise7"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/iv_icon_exercise2"
            android:layout_toEndOf="@+id/iv_icon_exercise6"
            app:srcCompat="@drawable/dot_icon" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="00"
            android:textSize="44sp" />

        <ImageView
            android:id="@+id/iv_icon_exercise1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_dayofweek"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/dot_icon" />

        <ImageView
            android:id="@+id/iv_icon_exercise6"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/iv_icon_exercise1"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/dot_icon" />

        <ImageView
            android:id="@+id/iv_icon_exercise2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_dayofweek"
            android:layout_toEndOf="@+id/iv_icon_exercise1"
            app:srcCompat="@drawable/dot_icon" />

        <ImageView
            android:id="@+id/iv_icon_exercise3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_dayofweek"
            android:layout_toEndOf="@+id/iv_icon_exercise2"
            app:srcCompat="@drawable/dot_icon" />

        <ImageView
            android:id="@+id/iv_icon_exercise4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_dayofweek"
            android:layout_toEndOf="@+id/iv_icon_exercise3"
            app:srcCompat="@drawable/dot_icon" />

        <ImageView
            android:id="@+id/iv_icon_exercise5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_dayofweek"
            android:layout_toEndOf="@+id/iv_icon_exercise4"
            app:srcCompat="@drawable/dot_icon" />

        <TextView
            android:id="@+id/tv_dayofweek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_day"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:text="MON"
            android:textSize="22sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>